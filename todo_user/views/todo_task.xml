<?xml version="1.0"?>
<odoo>
    <!-- ...Extending form view for user -->
    <record id="view_form_todo_task_inherited" model="ir.ui.view">
        <field name="name">Todo Task form -- User extention</field>
        <field name="model">todo.task</field>
        <field name="inherit_id" ref="todo.view_form_todo_task"/>
        <field name="arch" type="xml">
            <!-- Add the messaging field on the bottom -->
            <sheet position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </sheet>
            <field name="name" position="after">
                <field name="user_id"/>
            </field>
            <field name="is_done" position="before">
                <field name="date_deadline"/>
            </field>
            <field name="active" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <!-- ...Extending tree view for user -->
    <record id="view_tree_todo_task_inherited" model="ir.ui.view">
        <field name="name">Todo Task tree -- User extension</field>
        <field name="model">todo.task</field>
        <field name="inherit_id" ref="todo.view_tree_todo_task"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="user_id"/>
            </field>
        </field>
    </record>
    <!-- ...Extending search view /search by user, user's own tasks
     ... and not assigned tasks to anyone-->
    <record id="view_filter_todo_task_inherited" model="ir.ui.view">
        <field name="name">Todo Task tree -- User extension</field>
        <field name="model">todo.task</field>
        <field name="inherit_id" ref="todo.view_filter_todo_task"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="user_id"/>
                <filter name="filter_by_tasks" string="My Tasks" domain="[('user_id','in',[uid,False])]"/>
                <filter name="filter_not_assigned" string="Not Assigned" domain="[('user_id','=',False)]"/>
            </field>
        </field>
    </record>
    <!-- Modifying menu item -->
    <record id="todo.menu_todo_task" model="ir.ui.menu">
        <field name="name">My To-Do</field>
    </record>
    <!-- Action to open To-Do Task list applying the filter 'My Tasks' -->
    <record model="ir.actions.act_window" id="todo.action_todo_task">
        <field name="context">
            {'search_default_filter_my_tasks': True}
        </field>
    </record>
</odoo>